<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>cassandra</groupId>
  <artifactId>RiskModels</artifactId>
  <version>SNAPSHOT</version>
  <name>RiskModels</name>
  <description>The RiskModels package contains the Python scripts which work with the MarketDB to create the ModelDB.</description>
  <url>http://www.axiomainc.com/</url>
  <inceptionYear>2006</inceptionYear>
  <organization>
    <name>Axioma, Inc.</name>
    <url>http://www.axiomainc.com/</url>
  </organization>
  <scm>
    <connection>scm:svn:http://subversion.axiomainc.com/svn/Cassandra/RiskModels/branches/4.0</connection>
    <url>http://subversion.axiomainc.com/svn</url>
  </scm>
  <issueManagement>
    <url>http://intranet.axiomainc.com/bugzilla</url>
  </issueManagement>
  <ciManagement>
    <notifiers>
      <notifier>
        <configuration>
          <address>sschmieta@axiomainc.com</address>
        </configuration>
      </notifier>
    </notifiers>
  </ciManagement>
  <distributionManagement>
    <site>
      <id>default</id>
      <name>Default Site</name>
      <url>file://${siteDirectory}</url>
    </site>
  </distributionManagement>
  <dependencies>
    <dependency>
      <groupId>org.apache.derby</groupId>
      <artifactId>derby</artifactId>
      <version>10.1.2.1</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>Derby</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
        <version>3.3</version>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>RunSQLScript</mainClass>
            </manifest>
          </archive>
        </configuration>
        <version>2.6</version>
      </plugin>
      <plugin>
        <artifactId>maven-site-plugin</artifactId>
        <configuration>
          <moduleExcludes>
            <xdoc>navigation.xml</xdoc>
          </moduleExcludes>
        </configuration>
        <version>3.4</version>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-changes-plugin</artifactId>
        <reportSets>
          <reportSet>
            <reports>
              <report>changes-report</report>
            </reports>
          </reportSet>
        </reportSets>
        <configuration>
          <xmlPath>${basedir}/xdocs/changes.xml</xmlPath>
        </configuration>
        <version>2.11</version>
      </plugin>
    </plugins>
  </reporting>
</project>
