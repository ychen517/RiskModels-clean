CALL SYSCS_UTIL.SYSCS_SET_DATABASE_PROPERTY( 
    'derby.storage.pageReservedSpace',
    '0');

CREATE TABLE INDEX 
(
id   		   	INTEGER NOT NULL GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
name   		   	VARCHAR(63) NOT NULL,
description        	VARCHAR(128),
unit			VARCHAR(16) NOT NULL,
CONSTRAINT INDEX_PK PRIMARY KEY (id),
CONSTRAINT INDEX_NAME_UQ UNIQUE (name)
);

CREATE TABLE INDEX_EXPOSURE 
(
axioma_id	   VARCHAR(9) NOT NULL,
index_id  	   INTEGER NOT NULL,
value		   DOUBLE PRECISION NOT NULL,
CONSTRAINT AXIOMAID_INDEXID_PK PRIMARY KEY (axioma_id, index_id),
CONSTRAINT IDXEXP_INDEX_REF FOREIGN KEY (index_id) REFERENCES INDEX(id)
);

CREATE INDEX INDEX_EXPOSURE_INDEXID_INDEX ON INDEX_EXPOSURE(index_id);
